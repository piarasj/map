  "shortcuts": [
    {
      "name": "Search Contacts",
      "short_name": "Search",
      "description": "Search through contact listings",
      "url": "/map/?action=search",
      "icons": [
        {
          "src": "/map/icons/search-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Zoom to All",
      "short_name": "Zoom All", 
      "description": "Zoom map to show all contacts",
      "url": "/map/?action=zoom-all",
      "icons": [
        {
          "src": "./icons/zoom-icon-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/map/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "geojson_file",
          "accept": [".geojson", ".json", "application/geo+json"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/map/open-geojson",
      "accept": {
        "application/geo+json": [".geojson"],
        "application/json": [".json"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "geo",
      "url": "/map/?lat=%s&lng=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  }
}